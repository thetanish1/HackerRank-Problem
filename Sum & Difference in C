#include <stdio.h>
#include<stdlib.h>
#include<math.h>
#include<string.h>

int main()
{
	int a,b;
    float m,n;
    
    scanf("%d %d",&a,&b);
    scanf("%f %f",&m,&n);
    
    int sum=a+b;
    int diff=a-b;
    
    float summ=m+n;
    float diffe=m-n;
    
    printf("%d %d\n",sum,diff);
    printf("%0.1f %0.1f \n",summ,diffe);
    
    
    return 0;
}
